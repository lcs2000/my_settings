git status $* | awk -v disk=T: -v root_path=`pwd| sed 's;'"$HOME"';;'` -F '[:]' \
'BEGIN{gsub("/","\\", root_path);printf("TortoiseGitProc.exe /command:repostatus /path:\"")} \
    $1 ~ /file$/ || $1 ~ /modified$/ || $1 ~ /deleted$/ \
    {gsub(/^[[:blank:]]+/, "",$2);gsub("/", "\\",$2);if (NR>1) printf("*");printf("%s%s\\%s",disk,root_path,$2);} \
    END{print "\""}'
